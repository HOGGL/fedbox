config BR2_PACKAGE_PLEROMA_ARCH_SUPPORTS
       bool
       default y if BR2_x86_64 || BR2_arm || BR2_aarch64

config BR2_PACKAGE_PLEROMA
	bool "pleroma (Twitter alternative)"
	depends on BR2_PACKAGE_PLEROMA_ARCH_SUPPORTS
	depends on BR2_PACKAGE_POSTGRESQL_FULL
	depends on BR2_PACKAGE_OPENSSL
	select BR2_PACKAGE_FILE
	select BR2_PACKAGE_NCURSES
	select BR2_PACKAGE_NCURSES_TARGET_PROGS
	select BR2_PACKAGE_UTIL_LINUX
	select BR2_PACKAGE_UTIL_LINUX_LIBUUID
	help
	  Free and open communication for everyone. Pleroma is social
	  networking software compatible with other Fediverse software
	  such as Mastodon, Misskey, Pixelfed and many others.

	  https://pleroma.social

comment "pleroma requires postgresql with contrib"
	depends on !BR2_PACKAGE_POSTGRESQL_FULL

comment "pleroma requires openssl"
	depends on !BR2_PACKAGE_OPENSSL